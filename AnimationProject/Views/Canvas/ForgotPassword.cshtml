<style>
    body {
        height: 100vh;
        display: grid;
        place-items: center;
        background: #6214fe !important;
        font-family: "Nunito Sans", serif;
    }

    .form-container {
        width: 350px;
        background-color: white;
        padding: 3rem 1.5rem;
    }
    /* Sub forms carousel */
    .carousel .inner {
        overflow: hidden;
    }

    .form h2 {
        font-family: "Montserrat", sans-serif;
        font-weight: 800;
    }

    .carousel .inner .sub-forms {
        display: flex;
        --transX: 0px;
        transform: translateX(var(--transX));
        transition: all 0.5s ease;
    }

        .carousel .inner .sub-forms .sub-form {
            padding: 0rem;
            flex-basis: 100%;
            flex-shrink: 0;
        }

    .form-actions {
        width: fit-content;
    }

    .form-step-indicators {
        display: flex;
        justify-content: center;
        column-gap: 0.7rem;
    }

        .form-step-indicators button.step-indicator {
            outline: none;
            border: none;
            height: 5px;
            width: 25px;
            background-color: rgb(214, 214, 214);
            border-radius: 2px;
            transition: all 0.3s ease;
        }

            .form-step-indicators button.step-indicator.active {
                background-color: rgb(0, 94, 235);
            }

            .form-step-indicators button.step-indicator.visited:not(.active) {
                background-color: rgb(112, 169, 255);
            }

    .form-finish-box {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 300px;
        position: relative;
    }

        .form-finish-box .party-confetti-toggler-btns {
            width: 100%;
            display: flex;
            justify-content: space-between;
            position: absolute;
            bottom: 0;
            left: 0;
            visibility: hidden;
        }

    .login-From .login-right {
        background-color: #fff;
        height: 100vh;
        position: relative;
    }

        .login-From .login-right .form-container {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 60%;
            height: 50%;
        }

    .login-left .img-vertical {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        border: 6px solid #000;
        filter: drop-shadow(5px 2px 5px rgba(0, 0, 0, 0.5));
        width: 200px;
        aspect-ratio: 9/16;
        border-radius: 3px;
    }

    .login-left .img-horizontal {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        border: 6px solid #000;
        filter: drop-shadow(5px 2px 5px rgba(0, 0, 0, 0.5));
        width: 355.56px;
        aspect-ratio: 16/9;
        border-radius: 3px;
    }

    .Continue-btn {
        background: #6214fe;
        color: #fff;
        font-size: 14px;
        border-radius: 3px;
        font-weight: 500;
        width: 100%;
        border: 0px;
        padding: 9px 16px;
        text-align: center;
    }

        .Continue-btn:hover {
            background-color: #000;
            color: #fff;
        }

    .login-From .form-floating1 .form-control {
        border-radius: 3px;
        border: 2px solid transparent;
        padding: 7px 16px !important;
        height: auto;
        background: #f3f8f9;
        padding: 8px 10px;
        width: 100%;
        font-size: 14px;
        font-family: "Nunito Sans", serif;
    }

    .term-service {
        text-align: center;
        padding: 25px;
        font-size: 14px;
    }

    .form-title {
        text-align: center;
    }

    .sub-form p {
        text-align: center;
        margin-bottom: 20px;
        font-size: 14px;
    }

    .slide-1 .form-floating1 {
        position: relative;
    }

        .slide-1 .form-floating1 .fa-eye-slash {
            position: absolute;
            right: 17px;
            top: 12px;
            color: #b1b1b1;
        }

        .slide-1 .form-floating1 .fa-eye {
            position: absolute;
            right: 17px;
            top: 12px;
            color: #656565;
        }

    input::placeholder {
        color: #000; /* or any visible color */
    }

    .form-control:focus {
        box-shadow: none;
        border: 2px solid #000 !important;
    }

    .term-service a {
        text-decoration: none;
        color: #6214fe;
    }

    h2 {
        position: relative;
    }

        h2[title]:hover::after {
            color: #6214fe;
            content: attr(title);
            font-size: 10px;
            position: absolute;
            font-weight: 400;
            top: -100%;
            left: 0;
        }

    .indus_btn {
        border: 2px solid #eee;
        border-radius: 3px;
        background-color: transparent;
        color: #000;
        font-size: 14px;
        font-family: "Nunito Sans", serif;
    }

        .indus_btn:hover {
            border: 2px solid #6214fe;
        }

    .active_indus {
        background-color: #000;
        border: 2px solid #000;
        color: #fff;
    }

    .success_box {
        background-color: #fff;
        width: 100%;
        height: 100%;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .success-title {
        font-weight: 900;
    }

    .success_p {
        text-align: center;
        color: #000;
        font-size: 14px;
        font-family: "Nunito Sans", serif;
    }

    .success_btn {
        font-size: 14px;
        font-weight: 500;
        width: 172px;
        height: 85px;
        padding: 15px;
        border: none;
        border-radius: 3px;
        font-family: "Nunito Sans", serif;
    }

        .success_btn:hover {
            color: #fff;
            background-color: #000;
        }

    .s-select {
        background-color: #6214fe;
        color: #fff;
    }

    .s-create {
        background-color: #E4E9EC;
        color: #000;
    }
</style>
<div class="container-fluid login-From" id="signup_options" style="display:block; height: 100%">
    <div class="row">
        <div class="col-md-6 login-left" style="position: relative">
            <img src="~/images/laptop.png"
                 class="img-horizontal"
                 id="slide-img-2"
                 alt="horizental Menuboard"
                 title="horizental Menuboard"
            />
        </div>
        <div class="col-md-6 login-right">
            <div class="form-container">
                <form class="form">
                    <h2 class="form-title mb-3">
                        Forgot Password ?
                    </h2>
                    <div class="carousel">
                        <div class="inner">
                            <div class="sub-forms">
                                <div class="sub-form slide-1" id="slide-1">
                                    <p>Create your new password</p>
                                    
                                    <div class="form-floating1 mb-3">
                                        <input type="password"
                                               placeholder="Enter New Password"
                                               value=""
                                               id="password"
                                               class="form-control" />
                                        <i class="toggle-password fa fa-fw fa-eye-slash"></i>
                                    </div>
                                    <div class="form-floating1 mb-3">
                                        <input type="Password"
                                               placeholder="Confirm New Password"
                                               value=""
                                               id="password1"
                                               class="form-control" />
                                        <i class="toggle-password fa fa-fw fa-eye-slash"></i>
                                    </div>
                                    <button type="button"
                                            onclick="nextSlide('slide-1', 'slide-img-1', 'slide-img-2')"
                                            class="Continue-btn">
                                        Continue
                                    </button>
                                    <div class="form-floating mb-3">
                                        <p class="term-service">
                                            By clicking "Continue", your password will be reset.
                                        </p>
                                    </div>
                                </div>

                                
                                
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

