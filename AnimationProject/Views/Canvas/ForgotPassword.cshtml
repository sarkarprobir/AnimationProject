         function indusActive(event, clickedElement) {
      // Prevent default behavior (e.g., form submit, link follow)
      event.preventDefault();

      // Remove 'active_indus' from all elements
      document.querySelectorAll('.indus_btn').forEach(el => {
        el.classList.remove('active_indus');
      });

      // Add 'active_indus' to the clicked element
      clickedElement.classList.add('active_indus');
    }

</script>