                    <div class="clear"></div>
                </div>
            </li>
            <li>
                <img src="~/images/Default_Slide_Image.jpeg" id="imageVertical3" class="menuboard-vertical-thum" alt="Banner" onclick="SaveDesignBoardSlide(3); handleThumbClick(this);TabShowHide('In');updateDirectionButtons('In');updateDirectionButtons('Out');">
                <div class="d-flex justify-content-center align-items-center ">
                   @*  <span>3</span> *@
                    @* <button onclick="tranTogglePopup();" class="sd-btn-right"> <img src="~/images/icon-01.png" alt="Banner" style="width: 22px;"><b>Fade</b></button> *@
