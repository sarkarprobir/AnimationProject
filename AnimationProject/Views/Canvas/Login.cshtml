<style>
    /* Reset default styles */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    /* Full height and center content */
    body, html {
        height: 100%;
        background-color: #fff;
        font-family: "Nunito Sans", sans-serif;
    }

    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100%;
    }

    .login-box {
        text-align: center;
        width: 375px;
    }

    .logo {
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .subtitle {
        font-size: 0.9rem;
        color: #333;
        margin-bottom: 25px;
    }

    .input {
        display: block;
        width: 100%;
        padding: 7px 16px;
        margin-bottom: 10px;
        border: none;
        background-color: #e5ebed;
        font-size: 1rem;
        border-radius: 0;
    }

    .btn {
        width: 100%;
        padding: 8px 10px;
        background-color: #4e3eff;
        color: #fff;
        font-size: 1rem;
        border: none;
        border-radius: 0;
        cursor: pointer;
    }

        .btn:hover {
            background-color: #3e2ee0;
            color: #fff !important;
        }

</style>
<script>
        // Wait for DOM to load before accessing elements
    document.addEventListener('DOMContentLoaded', function() {
        // Add Enter key support to inputs
        document.getElementById('emailInput').addEventListener('keypress', function(e) {
            if(e.key === 'Enter') validateCredentials();
        });
        document.getElementById('passwordInput').addEventListener('keypress', function(e) {
            if(e.key === 'Enter') validateCredentials();
        });
    });

    function validateCredentials() {
        // Static credentials (already in lowercase)
        const staticEmail = "demo@aniboard.com";
        const staticPassword = "demo123";

        // Get user input values and convert to lowercase
        const enteredEmail = document.getElementById('emailInput').value.toLowerCase().trim();
        const enteredPassword = document.getElementById('passwordInput').value.toLowerCase().trim();

        // Validation check
        if(enteredEmail === staticEmail && enteredPassword === staticPassword) {
           window.location.href = window.location.origin + '/Canvas/VerticalIndex';
            // You can redirect or perform other actions here
        } else {
            alert("Invalid credentials!");
            // Clear password field for retry
            document.getElementById('passwordInput').value = '';
        }
    }
</script>


<div class="container">
    <div class="login-box">
        <h1 class="logo">AniBoard</h1>
        <p class="subtitle">Sign in to continue, or register for a new account.</p>
        <input type="email" class="input" id="emailInput" placeholder="Email" />
        <input type="password" id="passwordInput" class="input" placeholder="Password" />
        <button type="button" onclick="validateCredentials();"  class="btn">Continue</button>
    </div>
</div>
