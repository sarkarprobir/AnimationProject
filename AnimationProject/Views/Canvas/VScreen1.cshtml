@inject Microsoft.Extensions.Configuration.IConfiguration Configuration
@{
    // Set the flag to hide the footer on this page.
    ViewBag.HideFooter = true;
}
<body style="background-color:#000;">
    <style>
        /* Ensure the page occupies the entire viewport */
        html, body {
            background-color: #000; /* ensure the background is black */
            color: #fff;
            margin: 0;
            padding: 0;
            height: 100%;
        }
        /* Video container covers the full browser window */
        #videoContainer {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            background: black;
        }
        /* Video styles to fill the container */
        #videoPlayer {
            width: 100%;
            height: 100%;
            object-fit: contain; /* Use "cover" if you want to fill the area completely */
            background: black;
        }
    </style>
    <script src="~/js/verticalScreen.js?v=@Configuration["AppSettings:FilesVersion"]"></script>
<div id="videoContainer">
    <video id="videoPlayer" controls autoplay muted playsinline>
        <source id="videoSource"  type="video/mp4">
    </video>
    </div>
    </body>
