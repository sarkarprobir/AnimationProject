                        MessageShow('RedirectToVerticalPageWithQueryString()', 'Slide deleted successfully!', 'success');
                    } else {
                        MessageShow('', 'Failed to delete slide.', 'error');
                    }
                },
                error: function (data) {
                    console.log("Error in delete slide", data);
                    HideLoader();
                    MessageShow('', 'Error deleting slide.', 'error');
                }
            });

        } catch (e) {
            console.log("catch", e);
            HideLoader();
        }
