<script>

    const target = document.getElementById('hoverTarget');
    const box = document.getElementById('hoverBox');
    const hero = document.getElementById('main_hero');
    let hideTimeout;

    // Show box when hovering over the trigger
    target.addEventListener('mouseenter', () => {
      clearTimeout(hideTimeout);
      box.style.display = 'flex';
    });

    // Start a delayed hide when leaving the trigger
    target.addEventListener('mouseleave', () => {
      hideTimeout = setTimeout(() => {
        if (!box.matches(':hover')) {
          box.style.display = 'none';
        }
      }, 1000); // Slight delay to allow moving into the box
    });

    // Cancel hiding if mouse enters the box
    box.addEventListener('mouseenter', () => {
      clearTimeout(hideTimeout);
      box.style.display = 'flex';
      // hero.style.display = 'none';
    });

    // Hide the box when mouse leaves the box
    box.addEventListener('mouseleave', () => {
      box.style.display = 'none';
      hero.style.display = 'flex';
    });


</script>

