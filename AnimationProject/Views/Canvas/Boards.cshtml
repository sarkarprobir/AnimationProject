        </div>

        <div class="row mt-4 mb-4">
            <div class="col-md-6">
                <p class="mb-4">Horizontal Screens</p>
                <div class="row row-gap-4">
                    @if (Model != null && Model.Count > 0)
                    {
                        int idhx = 100;
                        @foreach (var item in Model)
                        {
                           
                            if (item.SlideType == "Horizontal")
                            {
                                <div class="col-md-6 horizontal-card">
                                    <div id="carouselH_@idhx"
                                         class="carousel slide board_hori"
                                         data-bs-ride="false" @* don’t auto-start *@
                                         data-bs-interval="2000">
                                        @* 2s per slide when running *@

                                        <div class="carousel-inner">
                                            @for (int j = 0; j < (item.DesignBoardDetailsList?.Count ?? 0); j++)
                                            {
                                                var detail = item.DesignBoardDetailsList[j];
                                                <div class="carousel-item @(j == 0 ? "active" : "")">
                                                    <img src="@Url.Content(detail.AnimationImagePath)"
                                                         class="d-block w-100"
                                                         alt="@detail.SlideName"
                                                         @* onerror="this.onerror=null; this.src='~/images/placeholder-image-vertical.png';" *@  />
                                                </div>
                                            }
                                        </div>

                                        <button class="carousel-control-prev" type="button"
                                                data-bs-target="#carouselH_@idhx"
                                                data-bs-slide="prev">
                                            <span class="carousel-control-prev-icon"></span>
                                            <span class="visually-hidden">Previous</span>
                                        </button>
                                        <button class="carousel-control-next" type="button"
                                                data-bs-target="#carouselH_@idhx"
                                                data-bs-slide="next">
                                            <span class="carousel-control-next-icon"></span>
                                            <span class="visually-hidden">Next</span>
                                        </button>
                                    </div>
                                  <div class="d-flex justify-content-left align-items-center gap-2 mt-4">
                                    <div class="board_name">
                                        <p title="@item.DesignBoardName">
                                            @(item.DesignBoardName.Length > 10
                                                ? item.DesignBoardName.Substring(0, 10) + "…"
                                                : item.DesignBoardName)
                                        </p>
                                    </div>
                                    <div class="d-flex justify-content-center gap-2">
                                        <a class="board_button"
                                           onclick="RedirectToHorizontalPage('@item.DesignBoardId')"><i class="fa-regular fa-pen-to-square"></i>
                                        </a>
                                        <a class="board_button" href="#"><i class="fa-regular fa-clone"></i></a>
                                    </div>
                                    <div class="position-relative board_info_wrapper">
                                        <div class="board_info_dots d-flex justify-content-center">
                                            <div class="board_info_icon d-flex justify-content-center" onclick="toggleBoardInfo(this)">
                                                <i class="fa-solid fa-ellipsis"></i>
                                            </div>
                                        </div>

